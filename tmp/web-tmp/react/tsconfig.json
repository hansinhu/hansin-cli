{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "outDir": "./dist",
    "rootDir": ".",
    "watch": false,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "rootDirs": [".", "./source"],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "emitDecoratorMetadata": true
  }
}
